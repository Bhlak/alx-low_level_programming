#include "main.h"

/**
 * puts_half - Prints half of a string
 * @str: String to be processed
 */

void puts_half(char *str)
{
	int count = 0, i;

	while (*(str + count) != '\0')
	{
		count++;
	}
	if (count % 2 == 0)
	{
		for (i = (count / 2); i <= count; i++)
		{
			_putchar(*(str + i));
		}
	}
	else
	{
		
	}
}
